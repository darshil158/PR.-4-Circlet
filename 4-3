#include <stdio.h>
#include<conio.h> 
int main()
{
    int i,j,k,n=5;
    for(i=1;i<=n;i++) {
        for(k=n;k>=i;k--) {
            printf("  ");
        }
        for(j=i;j>=1;j--) {
            printf("%d ",n-j+1);
        }
        printf("\n");
    }
    return 0;
}

/*
          5 
        4 5
      3 4 5
    2 3 4 5
  1 2 3 4 5
*/
