#include <stdio.h>
#include<conio.h> 
int main()
{
    int i,j,k,n=5,c;
    for(i=1;i<=n;i++) {
        for(k=1;k<=i-1;k++) {
            printf("  ");
        }
        for (j=5;j>=i;j--) {
            if (j%2==0) {
                printf("%d ", 0); 
            }
            else {
                printf("%d ", 1); 
            }
            //printf("%d ", j);
        }
        printf("\n");
    }
    return 0;
}

/*
1 0 1 0 1 
  1 0 1 0
    1 0 1
      1 0
        1
*/
