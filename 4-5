#include <stdio.h>
#include <conio.h>
int main()
{
    int i,j,k,m,n=5;
    for(int i=1;i<=n;i++) {
        for(int k=n-1;k>=i;k--) {
            printf("  ");
        }
        for (int m=1;m<=i;m++) {
            printf("%d ",n+m-i);
        }
        for (int j=n-1;j>=n-i+1;j--) {
            printf("%d ",j);
        }
        printf("\n");
    }
        return 0;
}


/*
        5 
      4 5 4
    3 4 5 4 3
  2 3 4 5 4 3 2
1 2 3 4 5 4 3 2 1 
*/
